<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="sale" type="com.suji.android.suji_android.database.model.Sale"/>
        <variable name="formatter" type="java.text.DecimalFormat"/>
    </data>

    <com.beardedhen.androidbootstrap.BootstrapWell
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/sold_item_name"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="@{sale.name}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/sold_pay"/>

            <com.beardedhen.androidbootstrap.BootstrapLabel
                    android:id="@+id/sold_pay"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/sold_item_name"/>

            <TextView
                    android:id="@+id/sold_item_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="@{formatter.getCurrencyInstance().format(sale.price).toString()}"
                    app:layout_constraintTop_toBottomOf="@id/sold_pay"/>

            <TextView
                    android:id="@+id/sold_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    app:layout_constraintTop_toBottomOf="@id/sold_item_money"/>

            <TextView
                    android:id="@+id/sold_item_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    app:layout_constraintTop_toBottomOf="@id/sold_item_description"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.beardedhen.androidbootstrap.BootstrapWell>
</layout>